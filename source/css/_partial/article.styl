article
  margin-bottom: 30px
  background: #ffffff
  padding: 15px
  transition: all 0.3s
  @media mq-xs
    padding: 15px 10px
.article-meta
  display: flex
  justify-content: flex-start
  align-items: center
  .article-category
    margin-left: 15px
    font-size: 12px
    color: rgba(#000, 0.3)
    .article-category-link
      @extend $tag-a
      &:hover
        text-decoration: none
        color: #333
        border-color: #666

.article-header
  h1
    font-size: 20px
    font-weight: bold

.article-entry
  .article-more-text
    color: #a3a3a3
    font-style: italic
    font-weight: 300
  .article-more-link
    display: inline-block
    font-style: normal
    font-size: 14px
    margin-top: 10px
    a
      @extend $tag-a
      &:hover
        text-decoration: none
        color: #333
        border-color: #666

.article-tag-list
  display: flex
  justify-content: flex-start
  align-items: center
  flex-wrap: wrap
  padding: 0
  .article-tag-list-item
    border-radius: 9px
    font-size: 12px
    line-height: 12px
    background: rgba(#000, 0.2)
    margin-right: 10px
    a
      color: #ffffff
      display: block
      padding: 3px 10px
      &:hover
        text-decoration: none
        color: #333

.article-gallery
  position: relative
  overflow: hidden
  .article-gallery-photos
    width: 100%
    .article-gallery-img
      width: 100%
      display: none
      text-align: center
      &:first-child
        display: block
      img
        max-width: 100%
        margin: 0 auto

#article-nav
  display: flex
  justify-content: space-between
  align-items: center
  flex-wrap: wrap
  a 
    width: 48%
    border: 1px solid color-border
    display: block
    padding: 5px 10px
    position: relative
    &:hover
      text-decoration: none
      border-color: #333333
    @media mq-xs
      width: 100%
      margin-top: 15px
  #article-nav-older
    text-align: right

